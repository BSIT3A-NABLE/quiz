<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <title>Art Trivia Questions</title>
</head>
<body>
  <div class="container mt-5">
    <h1 class="mb-4 text-center">Art Trivia Questions</h1>
    
    <% if (questions && questions.length > 0) { %>
      <div class="list-group">
        <% questions.forEach(function(question, index) { %>
          <div class="list-group-item">
            <strong>Question <%= index + 1 %>:</strong> <%= question.question %><br>
            <strong>Answer:</strong> <%= question.correct_answer %><br>
            <strong>Difficulty:</strong> <%= question.difficulty.charAt(0).toUpperCase() + question.difficulty.slice(1) %><br>
          </div>
        <% }); %>
      </div>
    <% } else { %>
      <p class="text-center">No questions available. Please try again later or check your selection.</p>
    <% } %>

    <div class="text-center mt-4">
      <a href="/" class="btn btn-secondary">Back to Home</a>
    </div>
  </div>
</body>
</html>
